[alias]
        lg = log --graph --pretty=format:'%Cred%h%Creset - %C(bold red)%an%Creset -%C(bold yellow)%d%Creset %s %C(bold green)(%cr)%Creset' --abbrev-commit --date=relative -20
        st = status
        co = checkout
        ci = commit
        pr = pull --rebase
        mg = merge --no-ff
[user]
        name = Chris Dargis
        email = chris.dargis@steelseries.com
[color]
        ui = auto
[color "branch"]
        current = magenta reverse
        local = magenta
        remote = red
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        branch = magenta
        added = green
        changed = red
        untracked = cyan
[core]
        excludesfile = ~/.gitignore_global
